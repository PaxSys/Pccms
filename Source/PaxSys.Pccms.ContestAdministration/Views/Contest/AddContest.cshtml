@model PaxSys.Pccms.ContestAdministration.Models.Contest.AddContestViewModel

@{
    ViewBag.Title = "New Contest";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Contest" asp-action="AddContest" method="post" >
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="col-md-10 form-control" type="text" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
    
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="col-md-10 form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>